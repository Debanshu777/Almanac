<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.YearlyView">

    <Button
        android:id="@+id/weekly_change_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/custom_button"
        android:text="@string/week"
        android:textAllCaps="false"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <LinearLayout
        android:id="@+id/change_calendar_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weekly_change_button"
        app:layout_constraintVertical_bias="0.02">

        <TextView
            android:id="@+id/month_display_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:text="@string/year_view_text"
            android:textAllCaps="true"
            android:textColor="@color/darker_grey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageButton
                android:id="@+id/yearly_display_left_shift"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@null"
                android:contentDescription="@string/left_shift_button"
                android:padding="3dp"
                android:src="@drawable/ic_left_arrow" />

            <ImageButton
                android:id="@+id/yearly_display_right_shift"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/right_shift_button"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/yearly_calender_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/today_button"
        app:layout_constraintVertical_bias="0.01"
        tools:listitem="@layout/monthly_calendar_cell_view" />

    <TextView
        android:id="@+id/today_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0.8"
        android:background="@drawable/custom_button"
        android:padding="5dp"
        android:text="@string/today_text"
        android:textAlignment="center"
        android:textColor="@color/darker_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_calendar_view" />

</androidx.constraintlayout.widget.ConstraintLayout>